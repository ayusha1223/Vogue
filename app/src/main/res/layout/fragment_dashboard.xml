<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login"
    tools:context=".ui.Activity.DashboardActivity">

    <!-- Space Above Navbar Reduced -->
    <Space
        android:id="@+id/navbarSpace"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Search Bar (Moved Up) -->


    <!-- First Row of Images (Moved Down) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginTop="10dp"> <!-- Moved Down -->

        <ImageView
            android:id="@+id/image1"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:src="@drawable/sale"
            android:scaleType="fitXY"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:id="@+id/image2"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:src="@drawable/sale2"
            android:scaleType="fitXY"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:id="@+id/image3"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/sale3"
            android:scaleType="fitXY"/>
    </LinearLayout>

    <!-- Second Row of Images (Moved Down) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"

        android:layout_marginTop="10dp"> <!-- Moved Down -->

        <ImageView
            android:id="@+id/image4"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:src="@drawable/sale4"
            android:scaleType="fitXY"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:id="@+id/image5"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:src="@drawable/sale5"
            android:scaleType="fitXY"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:id="@+id/image6"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/sale6"
            android:scaleType="fitXY"/>
    </LinearLayout>

    <!-- Third Row of Images (Moved Down) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginTop="10dp"> <!-- Moved Down -->

        <ImageView
            android:id="@+id/image7"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:src="@drawable/sale7"
            android:scaleType="fitXY"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:id="@+id/image8"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:src="@drawable/sale8"
            android:scaleType="fitXY"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:id="@+id/image9"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/sale9"
            android:scaleType="fitXY"/>
    </LinearLayout>

    <!-- Content Area (Fragments will be displayed here) -->
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Full-Screen Image -->
        <ImageView
            android:id="@+id/fullScreenImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/sale10"
            android:scaleType="fitXY"/>

    </FrameLayout>

    <Space
        android:id="@+id/bottomNavSpace"
        android:layout_width="match_parent"
        android:layout_height="56dp"/>

</LinearLayout>
